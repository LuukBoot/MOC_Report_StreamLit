# Example secrets configuration for Streamlit Google OIDC
# Copy this to .streamlit/secrets.toml and fill in your actual values

[connections.gcs]
# For localhost development, use: http://localhost:8501/
# For Streamlit Cloud, use: https://your-app-name.streamlit.app/
redirect_uri = "http://localhost:8501/"

# Generate a secure random string (32+ characters recommended)
# You can use: python -c "import secrets; print(secrets.token_urlsafe(32))"
cookie_secret = "REPLACE_WITH_SECURE_RANDOM_STRING"

# Your Google OAuth 2.0 Client ID
client_id = "your-client-id.apps.googleusercontent.com"

# Your Google OAuth 2.0 Client Secret
client_secret = "your-client-secret"

# Google OIDC server metadata URL (this rarely changes)
server_metadata_url = "https://accounts.google.com/.well-known/openid_configuration"
